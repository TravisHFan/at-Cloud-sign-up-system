# Frontend Environment Variables Template
# Copy this file to .env and configure for your environment

# Backend API Configuration
VITE_API_URL=http://localhost:5001/api
VITE_SOCKET_URL=http://localhost:5001
VITE_UPLOAD_BASE=http://localhost:5001 # For direct absolute avatar URLs if ever needed

# App Configuration
VITE_APP_NAME=@Cloud Sign-up System
VITE_APP_VERSION=1.0.0

# Environment
VITE_NODE_ENV=development

# Stripe Configuration
VITE_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key-here

# Optional: Analytics (add your tracking IDs)
# VITE_GOOGLE_ANALYTICS_ID=your-ga-id
# VITE_SENTRY_DSN=your-sentry-dsn

# Optional: Feature Flags
# VITE_ENABLE_DEBUG=true
# VITE_ENABLE_ANALYTICS=false
# Program Events Pagination: 'client' (default) | 'server'
# VITE_PROGRAM_EVENTS_PAGINATION=server
