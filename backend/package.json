{
  "name": "atcloud-signup-system-backend",
  "version": "1.0.0",
  "description": "Backend API for @Cloud Event Sign-up System",
  "main": "dist/index.js",
  "scripts": {
    "dev": "NODE_ENV=development nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "vitest run tests/unit --testTimeout=10000",
    "test:integration": "VITEST_SCOPE=integration vitest run tests/integration --testTimeout=60000",
    "test:e2e": "vitest tests/e2e",
    "test:watch": "vitest --watch",
    "test:coverage": "npm run test:coverage:unit && npm run test:coverage:integration",
    "test:coverage:unit": "vitest run tests/unit --coverage --testTimeout=10000",
    "test:coverage:integration": "vitest run tests/integration --coverage --testTimeout=60000",
    "setup-users": "ts-node src/scripts/setup/setupUsers.ts",
    "create-sample-data": "ts-node src/scripts/setup/createSampleData.ts",
    "regenerate-users": "ts-node src/scripts/setup/regenerateUsers.ts",
    "migrate-user-schema": "ts-node src/scripts/migrations/migrateUserSchema.ts",
    "check-db": "ts-node src/scripts/checkDatabases.ts"
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb",
    "typescript",
    "rest-api",
    "authentication",
    "event-management"
  ],
  "author": "Travis Fan @Cloud IT Team",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.0.13",
    "@types/nodemailer": "^6.4.17",
    "@types/sharp": "^0.31.1",
    "@types/socket.io": "^3.0.1",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "@types/xlsx": "^0.0.35",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.19.2",
    "express-rate-limit": "^6.11.2",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.18.0",
    "mongoose": "^8.16.3",
    "multer": "^2.0.1",
    "nodemailer": "^7.0.5",
    "sharp": "^0.34.3",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "uuid": "^11.1.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.7.4",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^8.50.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "vitest": "^1.0.0"
  }
}
