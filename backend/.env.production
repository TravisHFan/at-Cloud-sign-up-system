# Production Environment Configuration
NODE_ENV=production

# MongoDB Configuration (Update with your production MongoDB URI)
MONGODB_URI=mongodb://your-production-mongodb-host:27017/atcloud-signup-prod

# JWT Configuration (These should be unique, strong secrets in production)
JWT_ACCESS_SECRET=CHANGE_THIS_TO_A_VERY_LONG_RANDOM_STRING_IN_PRODUCTION_AT_LEAST_64_CHARACTERS
JWT_REFRESH_SECRET=CHANGE_THIS_TO_ANOTHER_VERY_LONG_RANDOM_STRING_IN_PRODUCTION_AT_LEAST_64_CHARACTERS
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Server Configuration
PORT=5001
FRONTEND_URL=https://your-production-domain.com

# Session Security
SESSION_SECRET=CHANGE_THIS_TO_A_STRONG_SESSION_SECRET_IN_PRODUCTION

# Email Configuration (Production SMTP settings)
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_USER=your-production-email@domain.com
EMAIL_PASS=your-app-specific-password

# Security Settings
BCRYPT_ROUNDS=14
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Settings
MAX_FILE_SIZE=5242880
UPLOAD_PATH=/var/uploads

# Database Settings
DB_POOL_SIZE=10
DB_TIMEOUT=30000

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# CORS Settings
ALLOWED_ORIGINS=https://your-production-domain.com,https://your-admin-domain.com
