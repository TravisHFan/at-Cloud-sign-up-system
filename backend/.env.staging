# Staging Environment Configuration
NODE_ENV=staging

# MongoDB Configuration
MONGODB_URI=mongodb://your-staging-mongodb-host:27017/atcloud-signup-staging

# JWT Configuration
JWT_ACCESS_SECRET=staging_access_secret_change_this_to_something_secure_for_staging
JWT_REFRESH_SECRET=staging_refresh_secret_change_this_to_something_secure_for_staging
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Server Configuration
PORT=5001
FRONTEND_URL=https://staging.your-domain.com

# Session Security
SESSION_SECRET=staging_session_secret_change_this

# Email Configuration (Staging SMTP or test settings)
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USER=your-staging-email-user
EMAIL_PASS=your-staging-email-pass

# Security Settings
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/tmp/uploads

# Database Settings
DB_POOL_SIZE=5
DB_TIMEOUT=30000

# Monitoring & Logging
LOG_LEVEL=debug

# CORS Settings
ALLOWED_ORIGINS=https://staging.your-domain.com
